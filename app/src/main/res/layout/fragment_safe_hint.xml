<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <com.github.grieey.wow.view.SafeHintView
      android:id="@+id/safeHintView"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/safe_hint_height"
      android:elevation="3dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <ImageView
      android:id="@+id/safeIv"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:padding="8dp"
      android:src="@drawable/ic_protect"
      android:background="@drawable/bg_rectangle_8_white"
      android:elevation="3dp"
      android:translationX="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/safeHintView"
      android:contentDescription="@null"
      />

</androidx.constraintlayout.widget.ConstraintLayout>